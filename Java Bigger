    public static void forum() {
        Scanner input = new Scanner(System.in);
        double val = 0, cont = 0, media = 0, soma = 0;
        System.out.println("Digite um valor para a sua nota: ");
        while (cont < 10) {
            val = input.nextDouble();
            soma += val;
            cont++;
        }
        media = soma / 10;
        System.out.println("Sua média seria de: " + media);
    }
    public static void ouher() {
        Scanner input = new Scanner(System.in);
        int num, fat = 1;
        System.out.println("Digite um valor: ");
        num = input.nextInt();
        for (int i = 1; i <= num; i++) {
            fat *= i;
        }
        System.out.println("O fatorial de " + num + " foi de: " + fat);
    }
    public static void oek() {
        Scanner input = new Scanner(System.in);
        int som = 0, quad = 0, dif = 0, cont = 1, valro;
        System.out.println("Digite um valor de entrada: ");
        valro = input.nextInt();

        /* while (cont <= 10) {
            som = som + cont * cont;
            quad = quad + cont;
            cont++;
        } */

       /* do {
            som = som + cont * cont;
            quad = quad + cont;
            cont++;
        } while(cont <= valro); */

        quad = quad * quad;
        System.out.println("O resultado da Soma de Quadrados é: " + som);
        System.out.println("O resultado do Quadrado da Soma é: " + quad);
        dif = quad - som;
        System.out.println("A diferença entre a Soma de Quadrado e o Quadrado da Soma foi: " + dif);
    }
    public static void opp() {
        Scanner input = new Scanner(System.in);
        double num;
        int n;
